#!/bin/bash
#
# This script generates the model and view helper classes out of the schema definition
#

CURRENT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

echo "Removing old type and view helper classes ..."
rm $CURRENT_DIR/../../Classes/Model/Type/*.php
rm $CURRENT_DIR/../../Classes/ViewHelpers/Type/*.php
echo

echo "Generating classes ..."
php $CURRENT_DIR/../generate.php
echo

echo "Formatting model classes ..."
$CURRENT_DIR/../../.Build/bin/php-cs-fixer fix $CURRENT_DIR/../../Classes/Model/Type/ --config $CURRENT_DIR/../../.php_cs
echo

echo "Formatting view helper classes ..."
$CURRENT_DIR/../../.Build/bin/php-cs-fixer fix $CURRENT_DIR/../../Classes/ViewHelpers/Type/ --config $CURRENT_DIR/../../.php_cs
echo

echo "Formatting provider class ..."
$CURRENT_DIR/../../.Build/bin/php-cs-fixer fix $CURRENT_DIR/../../Classes/Provider/WebPageTypeProvider.php --config $CURRENT_DIR/../../.php_cs
echo

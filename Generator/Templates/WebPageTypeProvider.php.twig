final class WebPageTypeProvider
{
    public static function getTypesForTcaSelect(): array
    {
        return [
            ['', ''],
            {% for type in types %}
                ['{{ type }}', '{{ type }}'],
            {% endfor %}
        ];
    }

    public static function getTypes(): array
    {
        return [
            {% for type in types %}
                '{{ type }}',
            {% endfor %}
        ];
    }
}

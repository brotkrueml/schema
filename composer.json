{
	"name": "brotkrueml/schema",
	"type": "typo3-cms-extension",
	"description": "API and view helpers for schema.org markup",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Chris MÃ¼ller",
			"role": "Developer"
		}
	],
	"support": {
		"chat": "https://typo3.slack.com/archives/CV36M73D5",
		"docs": "https://docs.typo3.org/p/brotkrueml/schema/master/en-us/",
		"issues": "https://github.com/brotkrueml/schema/issues",
		"source": "https://github.com/brotkrueml/schema"
	},
	"keywords": [
		"TYPO3 CMS",
		"TYPO3 extension",
		"JSON-LD",
		"Structured data",
		"SEO",
		"schema.org"
	],
	"require": {
		"php": ">=7.2",
		"ext-json": "*",
		"typo3/cms-core": "^9.5 || ^10.4"
	},
	"require-dev": {
		"clue/graph": "^0.9",
		"composer/package-versions-deprecated": "^1.8",
		"dg/bypass-finals": "^1.1",
		"friendsofphp/php-cs-fixer": "^2.16",
		"infection/infection": "^0.13",
		"mikey179/vfsstream": "^1.6",
		"php-coveralls/php-coveralls": "^2.2",
		"phpunit/phpunit": "^8.5 || ^9.1",
		"twig/twig": "^3.0",
		"typo3/cms-adminpanel": "^9.5 || ^10.4",
		"typo3/coding-standards": "^0.2",
		"typo3/testing-framework": "^4.13 || ^6.2",
		"vimeo/psalm": "^4.0"
	},
	"suggest": {
		"typo3/cms-adminpanel": "Display schema.org types and properties on a page in Admin Panel",
		"brotkrueml/schema-virtuallocation": "Provides pending type VirtualLocation for events"
	},
	"conflict": {
		"brotkrueml/sdbreadcrumb": "*"
	},
	"autoload": {
		"psr-4": {
			"Brotkrueml\\Schema\\": "Classes/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Brotkrueml\\Schema\\Generator\\": "Generator/Classes/",
			"Brotkrueml\\Schema\\Tests\\": "Tests/"
		}
	},
	"config": {
		"sort-packages": true,
		"vendor-dir": ".Build/vendor",
		"bin-dir": ".Build/bin"
	},
	"extra": {
		"branch-alias": {
			"dev-master": "1.9.x-dev"
		},
		"typo3/cms": {
			"extension-key": "schema",
			"app-dir": ".Build",
			"web-dir": ".Build/web"
		}
	},
	"scripts": {
		"fix-cs": ".Build/bin/php-cs-fixer fix",
		"zip": "grep -Po \"(?<='version' => ')([0-9]+\\.[0-9]+\\.[0-9]+)\" ext_emconf.php | xargs -I {version} sh -c 'mkdir -p ../zip; git archive -v -o \"../zip/${PWD##*/}_{version}.zip\" v{version}'"
	}
}
